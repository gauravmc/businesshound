<%= render 'admin/sidebar' %>

<div id="center" class="span8 shadow-box">
	<%= render 'layouts/flash', flash: flash %>
	
  <% if @products.any? %>
  	<table class="table table-striped table-hover" width="100%">
      <thead>
        <tr>
          <th>#</th>
          <th width="20%" style="text-align:center;">Product Image</th>
          <th width="45%">Product Name</th>
          <th>Price</th>
          <th width="5%"></th>
          <th width="5%"></th>
        </tr>
      </thead>
      <tbody>
  		<% @products.each.with_index do |product, i| %>
        <tr>
          <td><%= i + 1 %></td>
          <td style="text-align:center;"><img /></td>
          <td><%= product.name %></td>
          <td><%= "#{current_user.company.currency} #{product.price}" %></td>
          <td style="text-align:center;"><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_admin_product_path(product), class: "edit", title: "Edit" %></td>
          <td style="text-align:center;"><%= link_to '<i class="icon-trash"></i>'.html_safe, admin_product_path(product), class: "trash", title: "Delete", method: :delete, confirm: "Are you sure?" %></td>
        </tr>
      <% end %>  
      </tbody>
  	</table>
  <% elsif !flash.any? %>
    <div class="alert alert-info">
      <b>No products!</b> Well, you need to click the plus button on the right to add some.
    </div>
  <% end %>
</div>

<div class="span1">
  <a href="<%= new_admin_product_path %>" id="add-item" title="Add New Product"><%= image_tag "icons/glyphicons_190_circle_plus.png" %></a>
</div>
