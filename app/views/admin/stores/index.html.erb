<%= render 'admin/sidebar' %>

<div id="center" class="span8 shadow-box">
	<%= render 'layouts/flash', flash: flash %>
	
  <% if @stores.any? %>
  	<table class="table table-striped table-hover" width="100%">
      <thead>
        <tr>
          <th>#</th>
          <th width="45%">Store Name</th>
          <th>Description</th>
          <th width="5%"></th>
          <th width="5%"></th>
        </tr>
      </thead>
      <tbody>
  		<% @stores.each.with_index do |store, i| %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= store.name %></td>
          <td><%= "Today's Sale: #{current_user.company.currency}" %></td>
          <td style="text-align:center;"><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_admin_store_path(store), class: "edit", title: "Edit" %></td>
          <td style="text-align:center;"><%= link_to '<i class="icon-trash"></i>'.html_safe, admin_store_path(store), class: "trash", title: "Delete", method: :delete, confirm: "Are you sure?" %></td>
        </tr>
      <% end %>  
      </tbody>
  	</table>
  <% elsif !flash.any? %>
    <div class="alert alert-info">
      <b>No stores!</b> Well, you need to click the plus button on the right to add some.
    </div>
  <% end %>
</div>

<div class="span1">
	<a href="<%= new_admin_store_path %>" id="add-item" title="Add New Store"><%= image_tag "icons/glyphicons_190_circle_plus.png" %></a>
</div>
