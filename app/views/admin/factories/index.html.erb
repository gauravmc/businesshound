<%= render 'admin/sidebar' %>

<div class="span8 canvas">
	<div class="flash-box">
		<%= render 'layouts/flash', flash: flash %>
	</div>

	<div>
		<% @factories.each do |factory| %>
			<div class="shadow-box item">
				<img />
				<p class="item-name"><%= slice_name factory.name, 13 %></p>
				<p class="item-description"><%= "Today's Sale: #{current_user.company.currency}"%></p>
				<%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_admin_factory_path(factory), class: "edit", title: "Edit" %>
				<%= link_to '<i class="icon-trash"></i>'.html_safe, admin_factory_path(factory), class: "trash", title: "Delete", method: :delete, confirm: "Are you sure?" %>
			</div>
		<% end %>
	</div>
</div>

<div class="span1" style="margin-left:10px;">
	<a href="<%= new_admin_factory_path %>" id="add-item" title="Add New Factory"><%= image_tag "icons/glyphicons_190_circle_plus.png" %></a>
</div>
