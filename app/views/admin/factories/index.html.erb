<%= render 'admin/sidebar' %>

<div id="center" class="span8 shadow-box">
	<%= render 'layouts/flash', flash: flash %>
	
	<table class="table table-striped table-hover" width="100%">
    <thead>
      <tr>
        <th>#</th>
        <th width="45%">Factory Name</th>
        <th>Description</th>
        <th width="5%"></th>
        <th width="5%"></th>
      </tr>
    </thead>
    <tbody>
		<% @factories.each.with_index do |factory, i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= factory.name %></td>
        <td><%= "Today's Sale: #{current_user.company.currency}" %></td>
        <td style="text-align:center;"><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_admin_factory_path(factory), class: "edit", title: "Edit" %></td>
        <td style="text-align:center;"><%= link_to '<i class="icon-trash"></i>'.html_safe, admin_factory_path(factory), class: "trash", title: "Delete", method: :delete, confirm: "Are you sure?" %></td>
      </tr>
    <% end %>  
    </tbody>
	</table>
</div>

<div class="span1" style="margin-left:10px;">
	<a href="<%= new_admin_factory_path %>" id="add-item" title="Add New Factory"><%= image_tag "icons/glyphicons_190_circle_plus.png" %></a>
</div>
