<%= render 'store/sidebar', store: @store %>

<div id="center" class="span9 shadow-box">
  <div class="span2">
    <div class="input-append date" id="datepicker" data-date="<%= @left_on %>" data-date-format="yyyy-mm-dd">
      <p><%= @left_on %></p>
      <input size="16" type="text" value="<%= @left_on %>" class="input-small" readonly>
      <span class="add-on"><i class="icon-calendar"></i></span>
    </div>
  </div>

  <div class="span10">
    <%= render 'layouts/flash', flash: flash %>

    <div id="stocks-form">
      <%= render 'form', form_options: form_options, left_on: @left_on %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('#datepicker').datepicker().on('changeDate', function(e){
      var date = new Date(e.date.valueOf());
      var left_on = date.getFullYear() + '-' + (date.getMonth()+1) + '-' + date.getDate();
      $('.left-on').val(left_on);

      $.ajax({
        url: '<%= fetch_form_store_stocks_path %>?date=' + left_on,
        success: function(data) {
          $('#stocks-form').html(data);
        }
      });

      $('#datepicker').datepicker('hide');
    });
  });
</script>
