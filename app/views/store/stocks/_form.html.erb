<% if @store.errors.any? %>
  <div class="alert alert-error">
    <ul>
    <% @store.errors.each do |field, msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div style="text-align:center;">
	<%= form_for(@store, form_options) do |f| %>
		<table align="center" class="table table-striped">
		  <thead>
		    <tr>
		      <th>Product Name</th>
		      <th>Quantity</th>
		    </tr>
		  </thead>
		  <tbody>
				<% @stocks.each do |stock| %>
			    <tr>
			      <td><%= stock.product.name %></td>
						<%= f.fields_for :stocks, stock do |builder| %>
				      <td><%= builder.text_field :quantity, value: "#{user_friendly(stock.quantity)}", class: "input-small" %></td>
				      <%= builder.hidden_field :product_id %>
						<% end %>
			    </tr>
				<% end %>
		  </tbody>
		</table>
		<%= f.hidden_field :left_on, value: left_on, class: 'left-on' %>
		<%= f.submit "Add Stocks", class: "btn btn-success btn-large" %>
	<% end %>
</div>
